        cout << "Enter 7 to do nothing!!!" << endl;
        cout << "---------------------------------------------" << endl;
        cin >> choice;
        if (choice == 1){
            
        }else if (choice == 2){
            
        }else if (choice == 3){
            
        }else if (choice == 4){
            
        }else if (choice == 5){
            
